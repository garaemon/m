{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "spread": true,
    "templateStrings": true
  },
  "rules": {
    "max-len": [2, 100],
    "no-console": 0,
    "new-cap": 0,
    "valid-jsdoc": 0,
    "require-jsdoc": 0,
    "no-invalid-this": 0
  },
  "plugins": [
    "html"
  ],
  "globals": {
    "Polymer": true,
    "_": true
  },
  "extends": ["eslint:recommended", "google"]
}
